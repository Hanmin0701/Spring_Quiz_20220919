<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.quiz.lesson06.dao.BookMarkDAO">
 	<insert id="insertFavorite" parameterType="map">
	 	INSERT INTO `bookMark`
		 (
		 	`name`
		 	,`url`
		 	,`createdAt`
		 	,`updatedAt`
		 )
		 values
		 (
		 	#{name}
		 	,#{url}
		 	,NOW()
		 	,NOW()
		 )
 	</insert>
 	
 	<select id="selectFavorite" resultType="com.quiz.lesson06.dao.BookMarkDAO">
 		SELECT
 				`id`
	 			,`name`
			 	,`url`
			 	,`createdAt`
			 	,`updatedAt`
		FROM
			`bookMark`
 	</select>
 	
 	<select id="existAddressByUrl" parameterType="map" resultType="boolean">
 		SELECT
			COUNT(*)
		FROM
			`bookMark`
 	</select>
 	
 	<delete id="deleteRowById" parameterType="int">
 		DELETE 
 		FROM 
 			`bookMark`
 		WHERE 
 			`id` = #{id}
 	</delete>
</mapper>