			,`rentPrice`
			,`createdAt`
			,`updatedAt`
 		)
 		values
 		(
 			#{realtorId}
 			, #{address}
 			, #{area}
 			, #{type}
 			, #{price}
 			, #{rentPrice}
 			, NOW()
 			, NOW()
 		);
 	</insert>
 </mapper>
 		 
